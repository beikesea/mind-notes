<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.dialog-content div {
			margin: 6px;
		}
		.button-pane {
			text-align: right;
		}
		.text-box {
			width: 377px;
		}
	</ui:style>
	<g:DialogBox>
		<g:caption>
			<strong>
			<ui:msg>Image insert</ui:msg>
			</strong>
		</g:caption>
		<g:HTMLPanel>
			<div class="{style.dialog-content}">
				<div>
					<ui:msg>
						Please enter a URL of the image to insert;
						<br />
						The image will be hotlinked.
					</ui:msg>
				</div>
				<div>
					<g:TextBox ui:field="urlTextBox" addStyleNames="{style.text-box}"></g:TextBox>
				</div><div>
					<ui:msg>Uploading images is currently not supported.</ui:msg>
				</div>
				<div class="{style.button-pane}">
					<g:Button ui:field="cancelButton">
						<ui:msg>Cancel</ui:msg>
					</g:Button>
					<g:Button ui:field="okButton">
						<ui:msg>Insert</ui:msg>
					</g:Button>
					
				</div>
			</div>
		</g:HTMLPanel>
	</g:DialogBox>
</ui:UiBinder> 