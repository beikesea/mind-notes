<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:mnis="urn:import:mindnotes.client.ui.imagesearch">
	<ui:style>
		.title {
			font-size: 16px;
			font-weight: bold;
			margin: 6px 2px 4px 3px;
		}
		.container {
			border: 1px #ccc solid;
			background: #d7e6f5;
		}
		.insertMap {
			cursor: pointer;
		}
			
	</ui:style>
	<g:FlowPanel addStyleNames="{style.container}">
		<g:Label addStyleNames="{style.title}">Images</g:Label>
		<mnis:ImageSearchWidget ui:field="imageSearch" />
		<g:Label addStyleNames="{style.title}">Maps</g:Label>
		<g:Anchor ui:field ="insertMap" addStyleNames="{style.insertMap}">Insert new map</g:Anchor>
	</g:FlowPanel>
</ui:UiBinder> 