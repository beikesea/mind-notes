<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:mn='urn:import:mindnotes.client.ui'
	xmlns:txt='urn:import:mindnotes.client.ui.text'>
	<ui:image field="logo"  src="mindnotes-logo.png" />
	<ui:style>
	
		.rootPanel {
			position: absolute;
			overflow: hidden;
		}
		
		.mindmap {
			position: absolute;
			top: 0px;
			bottom: 0px;
			left: 0px;
			right: 0px;
			overflow: hidden;
		}
		
		.title {
			position: absolute;
			top: 0;
			left: 0;
			margin: 6px;
			background: none;
			font-weight:bold;
			color: #2e58a8;
			font-size: 18px;
			cursor: pointer;
			line-height: 18px;
		}

		.logo {
			position: absolute;
			bottom: 11px;
			left: 0;
			margin: 2px;
			background: none;
			line-height: 0px;
			font-size: 11px;
			
		}
		
		.logo img {
			vertical-align: middle;
		}
		
		.logo a {
			color: #a7c5ff;
			text-decoration: none;
			cursor: pointer;
			position: relative;
			top: 8px;
			left: -18px;
			margin-right: 6px;
		}
		
		.greetLabel {
			font-weight: bold;
			color: #82a82e;
		}
		
		.topbutton {
			cursor: pointer;
			margin-left: 12px;
			text-decoration: underline;
			
		}
		
		.cloud-bar {
			position: absolute;
			top: 0;
			right: 20px;
			margin: 6px;
			background: none;
			color: #2e58a8;	
		}
		
		.cloud-bar a {
			color: #2e58a8;	
		}
		


		
	</ui:style>
	<g:FlowPanel addStyleNames="{style.rootPanel}">
			<mn:MindMapWidget ui:field="mindMapWidget"></mn:MindMapWidget>
			<g:HTMLPanel addStyleNames="{style.logo}">
				<g:Image resource="{logo}" />
				<a href="http://code.google.com/p/mind-notes/" target="_blank">project site</a>
				<a href="http://code.google.com/p/mind-notes/source/checkout" target="_blank">source</a>
				<a href="http://code.google.com/p/mind-notes/issues/list" target="_blank">report issues</a>
			</g:HTMLPanel>
		
			<g:Label ui:field="titleLabel" addStyleNames="{style.title}" />
		
			<g:FlowPanel addStyleNames="{style.cloud-bar}" ui:field="cloudBarPanel">
				<g:InlineLabel ui:field="greetLabel" addStyleNames="{style.greetLabel}"></g:InlineLabel>
				<g:Anchor ui:field="newButton" addStyleNames="{style.topbutton}">New</g:Anchor>
				<g:Anchor ui:field="loadButton" addStyleNames="{style.topbutton}">Open</g:Anchor>
				<g:Anchor ui:field="saveButton" addStyleNames="{style.topbutton}">Save to cloud</g:Anchor>						
				<g:Anchor ui:field="saveLocalButton" addStyleNames="{style.topbutton}">Save locally</g:Anchor>
				<g:Anchor ui:field="shareButton" addStyleNames="{style.topbutton}">Share</g:Anchor>
				<g:Anchor ui:field="logoutLink" addStyleNames="{style.topbutton}">Log out</g:Anchor>
			</g:FlowPanel>


	</g:FlowPanel>

</ui:UiBinder> 